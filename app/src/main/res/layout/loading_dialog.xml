<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_white"
    android:padding="@dimen/margin_padding_size_large">

    <ProgressBar
        android:id="@+id/progress_dialog_bar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:progressTint="@color/colorPrimary"
        android:padding="@dimen/margin_padding_size_xxsmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/progress_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_padding_size_xsmall"
        android:text="@string/progress_dialog_loading_msg"
        android:textColor="@color/md_black"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="@+id/progress_dialog_bar"
        app:layout_constraintStart_toStartOf="@+id/progress_dialog_bar"
        app:layout_constraintTop_toBottomOf="@+id/progress_dialog_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>